<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:background="@color/backgroundcolour"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="18dp"
        android:text="Herzlich Willkommen zur 2study-App.\nDie App, die dir deinen Schulalltag erleichtert!\n\nUnter Lernen kannst du deine eigenen Lernzettel erstellen und mit ihnen lernen.\n\nMit der Kursverwaltung behältst du den Überblick über deine Kurse und Noten.\n\nUnter Termine kannst du deine Hausaufgaben und Klausurtermine in einem Kalender verwalten."
        android:textColor="@color/black" />

    <Button
        android:id="@+id/allesklarbutton"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="117dp"
        android:layout_marginBottom="34dp"
        android:backgroundTint="@color/white"
        android:text="Alles klar!"
        android:textColor="@color/black"
        android:textSize="12dp" />
</RelativeLayout>