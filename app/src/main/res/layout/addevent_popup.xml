<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="275dp"
    android:background="@color/backgroundcolour"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/zeigAktDatum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@color/backgroundcolour"
        android:gravity="center_horizontal"
        android:text="99.99.9999"
        android:textColor="@color/black"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/enterTerminBezeichnung"
        android:textColor="@color/black"
        android:layout_width="253dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:background="@color/white"
        android:gravity="fill"
        android:hint="Bezeichnung des Termins"
        android:textSize="22dp">

    </EditText>

    <Button
        android:id="@+id/abbrechenBtn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/white"
        android:text="Abbrechen"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <Button
        android:id="@+id/terminErstellenBtn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="187dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/white"
        android:text="Erstellen"
        android:textColor="@color/black"
        android:textSize="16dp" />

</RelativeLayout>