<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:background="@color/backgroundcolour"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="18dp"
        android:gravity="center_vertical"
        android:text="Wähle im Kalender einen Tag aus und drücke dann auf das +, um ein Ereignis mit einem Titel zu versehen und in den Kalender einzutragen.\nDu kannst zum Beispiel Hausaufgaben, Prüfungen oder Veranstaltungen eintragen.\n\nIm unteren Bereich siehst du deine anstehenden Termine und kannst diese bearbeiten."
        android:textColor="@color/black" />

    <Button
        android:id="@+id/allesklarbutton2"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="117dp"
        android:layout_marginBottom="34dp"
        android:backgroundTint="@color/white"
        android:text="Alles klar!"
        android:textColor="@color/black"
        android:textSize="12dp" />
</RelativeLayout>